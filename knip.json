{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["src/main.tsx", "index.html"],
      "project": ["src/**/*.{ts,tsx}", "index.html"]
    },
    "packages/shared": {
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/ui": {
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": [
    "wrapup_plan/**",
    "**/*.md",
    "public/**",
    "dist/**",
    "**/*.config.{ts,js,mjs}"
  ],
  "ignoreDependencies": [
    "@radix-ui/*",
    "@supabase/*",
    "class-variance-authority",
    "tailwindcss-animate"
  ],
  "ignoreBinaries": []
}
